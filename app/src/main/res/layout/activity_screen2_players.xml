<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".screen_2_players">

    <ImageView
        android:id="@+id/xBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/xBtn1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/icon_x"
        android:layout_marginBottom="-33dp"
        app:layout_constraintBottom_toBottomOf="@id/xBtn"
        app:layout_constraintEnd_toEndOf="@id/xBtn"
        app:layout_constraintStart_toStartOf="@id/xBtn"
        app:layout_constraintTop_toTopOf="@id/xBtn"
        tools:layout_editor_absoluteY="55dp" />


    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName"
        android:paddingVertical="20dp"
        android:textSize="21sp"
        android:textAlignment="center"
        android:background="@drawable/button_new_c"
        android:hint="Enter name here"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/xBtn"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/oBtn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit1" />

    <ImageView
        android:id="@+id/oBtn1"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_0"
        android:layout_marginBottom="-35dp"
        app:layout_constraintBottom_toBottomOf="@id/oBtn"
        app:layout_constraintEnd_toEndOf="@id/oBtn"
        app:layout_constraintStart_toStartOf="@id/oBtn"
        app:layout_constraintTop_toTopOf="@id/oBtn" />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName"
        android:paddingVertical="20dp"
        android:textAlignment="center"
        android:background="@drawable/button_new_c"
        android:hint="Enter name here"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/oBtn"
        tools:ignore="RtlSymmetry"/>

    <ImageView
        android:id="@+id/next"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/button_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit2" />

</androidx.constraintlayout.widget.ConstraintLayout>